  "add_friends_and_invite_link_panel": {
    "type": "panel",
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "size": [ "100%", 40 ],
    "controls": [
      {
        "whitelist_stack_panel": {
          "type": "stack_panel",
          "size": [ "100%", "100%" ],
          "orientation": "horizontal",
          "controls": [

            {
              "find_friends_button_panel@realms_whitelist.find_friends_button_panel": {
                "ignored": "(not $supports_add_friend)"
              }
            },
            {
              "spacing": {
                "type": "panel",
                "size": [ 2, "100%" ]
              }
            },
            {
              "share_by_link_button_panel@realms_whitelist.share_by_link_button_panel": {}
            },
            {
              "spacing2": {
                "type": "panel",
                "size": [ 1, "100%" ]
              }
            },
            {
              "options_panel": {
                "type": "panel",
                "size": [ 32, 32 ],
                "controls": [
                  {
                    "options_button@common_buttons.light_content_button": {
                      "$button_content": "realms_whitelist.options_icon",
                      "$pressed_button_name": "button.member_list_options",
                      "anchor_to": "center",
                      "anchor_from": "center",
                      "size": [ 30, 30 ]
                    }
                  }
                ],
                "bindings": [
                  {
                    "binding_name": "#options_visible",
                    "binding_name_override": "#visible",
                    "binding_type": "global"
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

