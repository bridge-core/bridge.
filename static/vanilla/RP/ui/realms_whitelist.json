  "gamer_panel@realms_common.main_banner": {
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "size": [ "100%", 27 ],
    "controls": [
      { "gamer_stack_panel@realms_whitelist.gamer_stack_panel": {} },
      {
        "right_controls_panel@realms_whitelist.right_controls_panel": {
          "offset": [ -3, 0 ], // Right aligned
          "layer": 6
        }
      },
      {
        "progress@progress.progress_loading_bars": {
          "size": [ 27, 27 ],
          "bindings": [
            {
              "binding_type": "view",
              "source_control_name": "gamertag_image",
              "resolve_sibling_scope": true,
              "source_property_name": "(#texture = '')",
              "target_property_name": "#visible"
