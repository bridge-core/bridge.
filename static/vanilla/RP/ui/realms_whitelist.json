      { "uninvited_friends_label@realms_whitelist.uninvited_friends_label": {} },
      { "uninvited_friends_grid@realms_whitelist.uninvited_friends_grid": {} },
      {
        "spacing_gap_uninvited_friends@realms_whitelist.spacing_gap": {}
