            {
              "stack_panel": {
                "layer": 1,
                "type": "panel",
                "anchor_from": "top_left",
                "anchor_to": "top_left",
                "size": [ "100%", "100%c + 2px" ],
                "controls": [
                  {
                    "stack_panel": {
                      "type": "stack_panel",
                      "orientation": "horizontal",
                      "anchor_from": "top_left",
                      "anchor_to": "top_left",
                      "size": [ "100%", 50 ],
                      "controls": [
                        {
                          "icon_background@manifest_validation.black_background_fill": {
                            "layer": 1,
                            "size": [ "100%c + 2px", "100%" ],
