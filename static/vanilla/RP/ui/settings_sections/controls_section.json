      {
        "keymapping_button_0@controls_section.image_binding_button": {
          "$button_tts_header":  "#audible_keymapping_name",
          "size": [ "20% + 1px", "100% - 4px" ],
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "bindings": [
            {
              "binding_type": "collection_details",
