  "accept_button_content": {
    "type": "image",
    "texture": "textures/ui/realms_green_check",
    "anchor_to": "center",
    "anchor_from": "center",
    //"layer": 6,
    "size": [ 15, 12 ]
  },

  "decline_button_content": {
    "type": "image",
    "texture": "textures/ui/realms_red_x",
