    "$button_tts_header": "gui.decline",
    "button_mappings": [
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "button.realm_invitation_decline",
        "mapping_type": "pressed"
      },
      {
        "from_button_id": "button.menu_ok",
