{
    "format_version": "$general.format_version",
    "animations": {
        "@meta": { "validate": "validateIDs.js" },
        "$placeholder": {
            "animation_length": "$general.number",
            "loop": "$general.boolean",
            "timeline": {
                "$placeholder": {
                    "$dynamic.list.next_index": "('@s ' + $dynamic.entity.all_events) and $function.embedded"
                }
            }
        }
    }
}